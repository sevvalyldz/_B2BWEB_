@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "E-posta onayını yeniden gönder";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h2 class="text-center">E-mailinizi giriniz.</h2>
<hr />
<div class="row justify-content-center align-items-start min-vh-100">
    <!-- Yatay ve dikey ortalamak için -->
    <div class="col-md-4">
        <form method="post">
            <!-- Validation errors -->
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <!-- Email input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Submit button -->
            <button type="submit" class="w-100 btn btn-lg btn-primary">Gönder</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
